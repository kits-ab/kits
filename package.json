{
  "name": "@kokitotsos/kits",
  "version": "3.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/kits.git"
  },
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "format": "prettier 'src/**/*.{js,json,jsx,md,ts,tsx}' --write",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint './src/**/*.tsx'",
    "lint:js": "eslint --ext '.ts,.tsx' src",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "start": "gatsby develop",
    "test": "npm run lint && tsc --noEmit"
  },
  "dependencies": {
    "@kokitotsos/react-components": "3.1.0",
    "babel-plugin-styled-components": "2.0.7",
    "date-fns": "2.28.0",
    "dotenv": "16.0.1",
    "gatsby": "4.14.0",
    "gatsby-plugin-catch-links": "4.14.0",
    "gatsby-plugin-feed": "4.14.0",
    "gatsby-plugin-image": "2.14.1",
    "gatsby-plugin-manifest": "4.14.0",
    "gatsby-plugin-netlify": "4.3.1",
    "gatsby-plugin-netlify-cms": "6.14.0",
    "gatsby-plugin-react-helmet": "5.14.0",
    "gatsby-plugin-sharp": "4.14.1",
    "gatsby-plugin-sitemap": "5.14.0",
    "gatsby-plugin-styled-components": "5.14.0",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "6.14.0",
    "gatsby-remark-prismjs": "6.14.0",
    "gatsby-remark-smartypants": "5.14.0",
    "gatsby-source-filesystem": "4.14.0",
    "gatsby-transformer-remark": "5.14.0",
    "gatsby-transformer-sharp": "4.14.0",
    "gatsby-transformer-yaml": "4.14.0",
    "mapbox-gl": "1.13.2",
    "netlify-cms-app": "2.15.72",
    "normalize.css": "8.0.1",
    "polished": "4.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-mapbox-gl": "5.1.1",
    "react-transition-group": "4.4.2",
    "remark": "14.0.2",
    "remark-html": "15.0.1",
    "slugify": "1.6.5",
    "styled-components": "5.3.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@types/node": "17.0.23",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@types/react-helmet": "6.1.5",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "eslint": "8.12.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "gatsby-plugin-graphql-codegen": "3.1.1",
    "husky": "^7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "stylelint": "14.6.1",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "rules": {
      "import/newline-after-import": "error",
      "import/no-anonymous-default-export": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "caseInsensitive": true,
            "order": "asc"
          },
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "newlines-between": "always"
        }
      ],
      "no-console": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "none"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "custom-property-pattern": null,
      "declaration-colon-newline-after": null,
      "keyframes-name-pattern": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "selector-class-pattern": null,
      "value-keyword-case": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  }
}
