{
  "name": "@kokitotsos/kits",
  "version": "3.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/kits.git"
  },
  "scripts": {
    "build": "gatsby clean && gatsby build --verbose",
    "clean": "gatsby clean",
    "format": "prettier 'src/**/*.{js,json,jsx,md,ts,tsx}' --write",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint './src/**/*.tsx'",
    "lint:js": "eslint --ext '.ts,.tsx' src",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "start": "gatsby develop",
    "test": "npm run lint && tsc --noEmit",
    "serve": "gatsby build && gatsby serve"
  },
  "dependencies": {
    "@kokitotsos/react-components": "4.0.0",
    "babel-plugin-styled-components": "^2.1.4",
    "date-fns": "^2.30.0",
    "decap-cms-app": "^3.0.7",
    "dotenv": "^16.3.1",
    "gatsby": "^5.12.3",
    "gatsby-plugin-catch-links": "^5.12.0",
    "gatsby-plugin-feed": "^5.12.0",
    "gatsby-plugin-image": "^3.12.0",
    "gatsby-plugin-manifest": "^5.12.0",
    "gatsby-plugin-netlify": "^5.1.0",
    "gatsby-plugin-netlify-cms": "7.12.0",
    "gatsby-plugin-react-helmet": "^6.12.0",
    "gatsby-plugin-sharp": "^5.12.0",
    "gatsby-plugin-sitemap": "^6.12.0",
    "gatsby-plugin-styled-components": "^6.12.0",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^7.12.0",
    "gatsby-remark-prismjs": "^7.12.0",
    "gatsby-remark-smartypants": "^6.12.0",
    "gatsby-source-filesystem": "^5.12.0",
    "gatsby-transformer-remark": "^6.12.0",
    "gatsby-transformer-sharp": "^5.12.0",
    "gatsby-transformer-yaml": "^5.12.0",
    "mapbox-gl": "^2.15.0",
    "normalize.css": "8.0.1",
    "polished": "4.2.2",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-map-gl": "^7.1.5",
    "react-transition-group": "^4.4.5",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "slugify": "^1.6.6",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.48.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gatsby-plugin-graphql-codegen": "^3.1.1",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "graphql": "16.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "rules": {
      "import/newline-after-import": "error",
      "import/no-anonymous-default-export": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "caseInsensitive": true,
            "order": "asc"
          },
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "newlines-between": "always"
        }
      ],
      "no-console": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "none"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "custom-property-pattern": null,
      "declaration-colon-newline-after": null,
      "keyframes-name-pattern": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "selector-class-pattern": null,
      "value-keyword-case": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  }
}
