{
  "name": "@kokitotsos/kits",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/kits.git"
  },
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf .cache public",
    "format": "prettier \"src/**/*.{js,json,jsx,md,ts,tsx}\" --write",
    "generateschema": "gql-gen",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint \"./src/**/*.tsx\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.prod.json",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "start": "gatsby develop --host 0.0.0.0",
    "test": "yarn lint"
  },
  "dependencies": {
    "@kokitotsos/react-components": "1.2.4",
    "babel-plugin-styled-components": "1.10.0",
    "date-fns": "1.30.1",
    "dotenv": "6.2.0",
    "gatsby": "2.0.119",
    "gatsby-link": "2.0.10",
    "gatsby-plugin-catch-links": "2.0.11",
    "gatsby-plugin-feed": "2.0.13",
    "gatsby-plugin-manifest": "2.0.17",
    "gatsby-plugin-netlify": "2.0.10",
    "gatsby-plugin-netlify-cache": "1.0.0",
    "gatsby-plugin-netlify-cms": "3.0.12",
    "gatsby-plugin-offline": "2.0.23",
    "gatsby-plugin-react-helmet": "3.0.6",
    "gatsby-plugin-robots-txt": "1.4.0",
    "gatsby-plugin-sharp": "2.0.20",
    "gatsby-plugin-sitemap": "2.0.5",
    "gatsby-plugin-styled-components": "3.0.5",
    "gatsby-plugin-typescript": "2.0.7",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "3.0.3",
    "gatsby-remark-prismjs": "3.2.4",
    "gatsby-remark-smartypants": "2.0.8",
    "gatsby-source-filesystem": "2.0.20",
    "gatsby-transformer-remark": "2.2.5",
    "gatsby-transformer-sharp": "2.1.13",
    "gatsby-transformer-yaml": "2.1.8",
    "mapbox-gl": "0.53.0",
    "netlify-cms": "2.4.1",
    "normalize.css": "8.0.1",
    "polished": "2.3.3",
    "prismjs": "1.15.0",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "react-helmet": "5.2.0",
    "react-mapbox-gl": "4.2.0",
    "react-transition-group": "2.5.3",
    "remark": "10.0.1",
    "remark-html": "9.0.0",
    "slugify": "1.3.4",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@types/graphql": "14.0.6",
    "@types/node": "10.12.21",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-helmet": "5.0.8",
    "@types/styled-components": "4.1.8",
    "graphql": "14.1.1",
    "graphql-code-generator": "0.16.1",
    "graphql-codegen-typescript-client": "0.16.1",
    "graphql-codegen-typescript-common": "0.16.1",
    "graphql-codegen-typescript-server": "0.16.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.3",
    "uglifyjs-webpack-plugin": "2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  }
}
